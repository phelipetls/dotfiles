{
  "coc.preferences.floatActions": false,
  "coc.preferences.promptInput": false,
  "diagnostic.enableMessage": "jump",
  "diagnostic.checkCurrentLine": true,
  "signature.hideOnTextChange": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.virtualTextPrefix": "▪  ",
  "diagnostic.enableSign": false,
  "diagnostic.errorSign": "▎",
  "diagnostic.warningSign": "▎",
  "diagnostic.hintSign": "▎",
  "diagnostic.infoSign": "▎",
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "typescript", "javascriptreact", "typescriptreact"],
  "typescript.updateImportsOnFileMove.enable": true,
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.bracketEnterImprove": false,
  "signature.floatConfig": {"border": true, "borderhighlight": "VertSplit"},
  "suggest.floatConfig": {"border": true, "borderhighlight": "VertSplit"},
  "diagnostic.floatConfig": {"border": true, "borderhighlight": "VertSplit"},
  "hover.floatConfig": {"border": true, "borderhighlight": "VertSplit"},
  "css.lint.unknownAtRules": "ignore",
  "html.filetypes": ["html", "htmlhugo", "htmldjango"],
  "prettier.requireConfig": true,
  "prettier.formatterPriority": 101,
  "suggest.noselect": true,
  "html.autoCreateQuotes": false,
  "html.autoClosingTags": false,
  "coc.source.syntax.enable": true,
  "coc.source.syntax.filetypes": ["htmlhugo"],
  "languageserver": {
    "efm": {
      "command": "efm-langserver",
      "filetypes": [
        "sh",
        "zsh",
        "yaml",
        "lua",
        "python",
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact",
        "vim",
        "astro",
        "mdx"
      ],
      "formatterPriority": 100
    },
    "tailwindcss-lsp": {
      "command": "tailwindcss-language-server",
      "args": ["--stdio"],
      "filetypes": [
        "css",
        "html",
        "htmlhugo",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "astro"
      ],
      "rootPatterns": [
        "tailwind.config.js",
        "tailwind.config.ts",
        "postcss.config.js",
        "postcss.config.ts"
      ],
      "initializationOptions": {
        "userLanguages": {
          "htmlhugo": "html"
        }
      },
      "settings": {
        "tailwindCSS": {
          "validate": true,
          "lint": {
            "cssConflict": "warning",
            "invalidApply": "error",
            "invalidScreen": "error",
            "invalidVariant": "error",
            "invalidConfigPath": "error",
            "invalidTailwindDirective": "error",
            "recommendedVariantOrder": "warning"
          },
          "classAttributes": ["class", "className", "classList", "ngClass", "class:list"],
          "experimental": {}
        }
      }
    },
    "astro-ls": {
      "command": "astro-ls",
      "args": ["--stdio"],
      "filetypes": [
        "astro"
      ],
      "rootPatterns": [
        "astro.config.js",
        "astro.config.mjs",
        "astro.config.ts",
        "astro.config.mts"
      ]
    }
  },
  "Lua.telemetry.enable": true,
  "Lua.hint.enable": false,
  "sumneko-lua.enableNvimLuaDev": true
}
